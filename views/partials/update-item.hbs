 <form action="/update-item" method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col">
            {{#each data}}
            <input type="hidden" name="id" value="{{_id}}"/><br>
            <label class="text-light" for="title">*Meal Title</label><br>
            <input class="form-control" type="text" name="title" id="title" value="{{mealName}}"
                placeholder="Meal Name" tabindex="1">
            <label class="text-light mt-2" for="description">*Description</label><br>
            <textarea class="form-control" rows="3" name="description" id="description"
                placeholder="Description" tabindex="2">{{description}}</textarea>
            <label class="text-light mt-2" for="ingredients">*What is included?</label><br>
            <input class="form-control" type="text" name="ingredients" id="ingredients"
                value="{{ingredients}}" placeholder="Ingredients" tabindex="3">
            <label class="text-light mt-2" for="category">*Category</label><br>
            <input class="form-control" type="text" name="category" id="category" value="{{category}}"
                placeholder="Category" tabindex="4">
            <label class="text-light mt-2" for="price">*Price</label><br>
            <input class="form-control" type="text" name="price" id="price" value="{{price}}"
                placeholder="Price $$" tabindex="5">
            <label class="text-light mt-2" for="cookTime">*Cooking Time</label><br>
            <input class="form-control" type="text" name="cookTime" id="cookTime" value="{{cookTime}}"
                placeholder="Cook Time" tabindex="6">
            <label class="text-light mt-2" for="servings">*Servings</label><br>
            <input class="form-control" type="text" name="servings" id="servings" value="{{servings}}"
                placeholder="Servings" tabindex="7">
            <label class="text-light mt-2" for="calories">*Calories</label><br>
            <input class="form-control" type="text" name="calories" id="calories" value="{{calories}}"
                placeholder="Calories" tabindex="8">
            <div class="mt-3 text-light">
                <input class="form-check-input" type="checkbox" value="true" id="topMeal" name="topMeal"
                     tabindex="9" {{#if topMeal}}checked{{/if}}>
                <label class="form-check-label" for="topMeal">
                    Top Meal
                </label>
            </div>
            {{/each}}
            <div class="d-grid gap-2">
                <button class="btn mt-2 mb-4" type="submit">Update</button>
            </div>
        </div>
    </div>
</form>