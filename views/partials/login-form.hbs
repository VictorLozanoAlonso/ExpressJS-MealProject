<form action="/login" method="POST">
    <div class="row mb-3">
        <div class="col">
            <input class="form-control mt-3" type="text" name="email" id="email" placeholder="Email Address" value="{{values.email}}"
                tabindex="1">
            {{#if validation.email}}
                <p class="text-light fst-italic text-start"><small>{{validation.email}}</small></p>
            {{/if}}
            <input class="form-control mt-3" type="password" name="password" id="password" placeholder="Password" value="{{values.password}}"
                tabindex="2">
            {{#if validation.password}}
                <p class="text-light fst-italic text-start"><small>{{validation.password}}</small></p>
            {{/if}}
            <div class="form-check mt-3 text-start">
                <input class="form-check-input" type="radio" name="loginType" id="Clerk" value="Clerk">
                <label class="form-check-label" for="Clerk">
                    Data Entry Clerk
                </label>
            </div>
            <div class="form-check text-start">
                <input class="form-check-input" type="radio" name="loginType" id="Customer" value="Customer" checked>
                <label class="form-check-label" for="Customer">
                    Customer
                </label>
            </div>
            <div class="d-grid gap-2">
                <input class="btn mt-3" type="submit" value="Log in" name="submit" id="submit" tabindex="3">
            </div>
        </div>
    </div>
</form>