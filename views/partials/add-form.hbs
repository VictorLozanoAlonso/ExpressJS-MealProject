<form action="/add-meal" method="POST" enctype="multipart/form-data">
    <div class="row mb-3">
        <div class="col">
            <label class="text-light" for="title">*Meal Title</label><br>
            <input class="form-control" type="text" name="title" id="title" value="{{values.title}}"
                placeholder="Meal Name" tabindex="1">
            <label class="text-light mt-2" for="description">*Description</label><br>
            <textarea class="form-control" rows="3" name="description" id="description"
                placeholder="Description" tabindex="2">{{values.description}}</textarea>
            <label class="text-light mt-2" for="ingredients">*What is included?</label><br>
            <input class="form-control" type="text" name="ingredients" id="ingredients"
                value="{{values.ingredients}}" placeholder="Ingredients" tabindex="3">
            <label class="text-light mt-2" for="category">*Category</label><br>
            <input class="form-control" type="text" name="category" id="category" value="{{values.category}}"
                placeholder="Category" tabindex="4">
            <label class="text-light mt-2" for="price">*Price</label><br>
            <input class="form-control" type="text" name="price" id="price" value="{{values.price}}"
                placeholder="Price $$" tabindex="5">
            <label class="text-light mt-2" for="cookTime">*Cooking Time</label><br>
            <input class="form-control" type="text" name="cookTime" id="cookTime" value="{{values.cookTime}}"
                placeholder="Cook Time" tabindex="6">
            <label class="text-light mt-2" for="servings">*Servings</label><br>
            <input class="form-control" type="text" name="servings" id="servings" value="{{values.servings}}"
                placeholder="Servings" tabindex="7">
            <label class="text-light mt-2" for="calories">*Calories</label><br>
            <input class="form-control" type="text" name="calories" id="calories" value="{{values.calories}}"
                placeholder="Calories" tabindex="8">
            <label class="text-light mt-2" for="mealImage">*Meal Picture</label><br>
            <input class="form-control" type="file" name="mealImage" id="mealImage" value="{{values.mealImage}}"
                placeholder="Upload Meal Image" tabindex="9">
            <div class="mt-3 text-light">
                <input class="form-check-input" type="checkbox" value="true" id="topMeal" name="topMeal"
                    value="{{values.topMeal}}" tabindex="10">
                <label class="form-check-label" for="topMeal">
                    Top Meal
                </label>
            </div>
            <div class="d-grid gap-2">
                <input class="btn mt-3" type="submit" value="Add Meal" name="submit" id="submit" tabindex="11">
            </div>
        </div>
    </div>
</form>