 <div class="card-deck mt-2">
    <h2>List of meals</h2>
{{#each data}}
        <div class="card list-meals mt-3 ms-3 me-3 mb-3">
            <div class="card-body">
                <h3 class="card-title">{{mealName}}</h5>
                <p class="card-text">{{ingredients}}</p>
                <p class="card-text">{{description}}</p>
                <p class="card-text">Price: {{price}}</p>
                <p class="card-text">Category: <strong>{{category}}</strong></p>
            </div>
        </div>
{{/each}}
</div>